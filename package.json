{
	"name": "@shenanigan/root",
	"private": true,
	"scripts": {
		"app:start": "lerna run start --parallel --scope @shenanigan/app --include-dependencies",
		"android": "lerna run android --parallel --scope @shenanigan/app --include-dependencies",
		"ios": "lerna run ios --parallel --scope @shenanigan/app --include-dependencies",
		"relay": "lerna run relay --scope @shenanigan/app",
		"compile": "lerna run compile --parallel --scope @shenanigan/contracts ",
		"deploy": "lerna run deploy --parallel --scope @shenanigan/contracts ",
		"server:serve": "lerna run serve --parallel --scope @shenanigan/server --include-dependencies",
		"server:build": "lerna run build --parallel --scope @shenanigan/server --include-dependencies",
		"test": "lerna run test --parallel --",
		"update-schema": "lerna run update-schema --parallel --scope @shenanigan/server --include-dependencies",
		"chain": "cd packages/contracts && npx buidler node",
		"sidechain": "cd packages/contracts && npx buidler node --port 8546",
		"generate": "lerna run generate --parallel --scope @shenanigan/contracts ",
		"accounts": "cd packages/contracts && npx buidler accounts",
		"account": "cd packages/contracts && npx buidler account",
		"balance": "cd packages/contracts && npx buidler balance",
		"send": "cd packages/contracts && npx buidler send",
		"test:full": "yarn lint && yarn typecheck && yarn test",
		"clean": "lerna clean",
		"format": "prettier --ignore-path .gitignore --write \"{*,**/*}.{ts,tsx,js,jsx,json,yml,yaml,md}\"",
		"lint": "eslint --ignore-path .gitignore \"./packages/**/*.{ts,tsx,js,jsx}\"",
		"typecheck": "lerna run typecheck",
		"server": "yarn --cwd packages/server/",
		"app": "yarn --cwd packages/app/",
		"contracts": "yarn --cwd packages/contracts/"
	},
	"devDependencies": {
		"@nomiclabs/buidler": "^1.4.4",
		"@nomiclabs/buidler-ethers": "^2.0.0",
		"@nomiclabs/buidler-truffle5": "^1.3.4",
		"@nomiclabs/buidler-waffle": "^2.0.0",
		"@nomiclabs/buidler-web3": "^1.3.3",
		"@opengsn/gsn": "2.0.0-alpha.3-patch.2",
		"@types/bcryptjs": "^2.4.2",
		"@types/jsonwebtoken": "^8.3.8",
		"@types/mongoose": "^5.7.6",
		"babel-loader": "^8.0.6",
		"chai": "^4.2.0",
		"ethereum-waffle": "^3.0.0",
		"ethers": "^5.0.0",
		"graphql-cli": "^3.0.14",
		"lerna": "^3.22.1",
		"nodemon": "^2.0.2",
		"ts-node": "^8.6.2",
		"typescript": "^3.8.3"
	},
	"workspaces": [
		"packages/*"
	]
}
