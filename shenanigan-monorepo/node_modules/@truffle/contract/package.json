    "@truffle/interface-adapter": "^0.4.7",
    "bignumber.js": "^7.2.1",
    "ethereum-ens": "^0.8.0",
    "ethers": "^4.0.0-beta.1",
    "exorcist": "^1.0.1",
    "source-map-support": "^0.5.19",
    "web3": "1.2.1",
    "web3-core-helpers": "1.2.1",
    "web3-core-promievent": "1.2.1",
